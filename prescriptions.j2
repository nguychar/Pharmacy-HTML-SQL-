        <h1>Recently Processed Prescriptions</h1>
            <hr>
            *To log new prescription, go to <a href="/index">inventory home page</a>*
            <p></p>
            <br>

<table border="1" cellpadding="5">
            <!-- Access data tuple passed from app.py --> 
            {% if rx_data %}
                <thead>
                    <tr>
                        <th>RX Number</th>
                        <th>Date</th>
                        <th>Drug Dispensed</th>
                        <th>Quantity</th>
                        <th>RPH</th>
                        <th>Edit</th>
                        <th>Delete</th>
                    </tr>

                <tbody>
                    <!-- Now, iterate through every item in data -->{% for item in rx_data %}
                        <tr>
                            <!-- Then iterate through every key in the current item dictionary -->
                            {% for key in item.keys() %}

                            <!-- Create a <td> element with the value of that key in it -->
                            <td> {{item[key]}} </td> 
                            {% endfor %}
                            
                            <td><a href="edit_prescription/{{item.rx_number}}" class="btn btn-default">Edit</a></td>
                            <td><a href="prescriptions/delete/{{item.rx_number}}" class="btn btn-default">Delete</a></td>
                        </tr> 
                        {% endfor %} 
                {% endif %} 
        </table>   
