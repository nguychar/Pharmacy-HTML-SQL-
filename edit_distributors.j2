	<h1>Edit Distributor</h1>
    <div>
    <table border="1" cellpadding="5"> 
        <!-- Access data tuple passed from app.py -->
        {% if data %}
            <thead>
                <tr>
                    <th>Number</th>
                    <th>Distributor Name</th>
                    <th>Total Expenses ($)</th>
                </tr>
            <tbody>
                <!-- Now, iterate through every item in data -->
                {% for item in data %}
                <tr>
                    <!-- Then iterate through every key in the current item dictionary -->
                    {% for key in item.keys() %}
                    
                    <!-- Create a <td> element with the value of that key in it -->
                    <td>{{item[key]}}</td> {% endfor %} 
                </tr> 
                {% endfor %} 
        {% endif %} 
        </table>
        <br>
        <div id="edit">
            <form id="editDistributor" action="/edit_distributor/{{data[0].distributor_number}}" method="post">
                <legend><strong>Edit Distributor</strong></legend>
                <fieldset>
                    <label for="name">Distributor Name:</label>
                    <input type="text" id="name" name="name" placeholder="Distributor" required>
                </fieldset>
                <input type="submit" value="Edit Distributor" name="Edit_Distributor" class="btn btn-primary" style="margin:.5rem;">
                <a href="/distributors"><input class="btn" type="button" value="Cancel"></a>
            </form>
</html>
