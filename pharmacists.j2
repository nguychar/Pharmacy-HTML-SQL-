<!doctype html>
<html lang="en">

<head>
    {% block head %}
    <link rel="stylesheet" href="http://flip2.engr.oregonstate.edu:17350/static/style.css" />
    <title>{% block title %}{% endblock %}No Refills Pharmacy</title>
    {% endblock %}
</head>


<body>
    <nav class="navbar">
    <h1><a class="navbar-brand">No Refills Pharmacy</a></h1>
    </button>
    <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav">
        <li class="nav-item active">
            <a class="nav-link" href="/index">Inventory Home Page</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href="/prescriptions">Prescriptions</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href="/pharmacists">Pharmacists</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href="/invoices">Invoices</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href="/distributors">Distributors</a>
        </li>
        </ul>
    </div>
    </nav>
    <div id="content">
      <h1>Pharmacists Currently Employed</h1>
      <hr>
        <form method="post">
            <legend><strong>Add New Pharmacist</strong></legend>
            <fieldset class="fields">
                <label> First Name </label> <input type="text" id= "fname" name="fname" placeholder="(i.e. John)">
                <label> Last Name </label> <input type="text" id= "lname" name="lname" placeholder="(i.e. Doe)">
                <input class="btn btn-primary" type="submit" name="add_rph" value="Add Pharmacist">
            </fieldset>
        </form> 
        <br>
 <table border="1" cellpadding="5">
            <!-- Access data tuple passed from app.py --> 
            {% if data %}
                <thead>
                    <tr>
                        <th>RPH Number</th>
                        <th>First Name</th>
                        <th>Last Name</th>
                        <th># of C2s Processed</th>
                        <th>Edit</th>
                        <th>Delete</th>
                    </tr>

                <tbody>
                    <!-- Now, iterate through every item in data -->{% for item in data %}
                        <tr>
                            <!-- Then iterate through every key in the current item dictionary -->
                            {% for key in item.keys() %}

                            <!-- Create a <td> element with the value of that key in it -->
                            <td> {{item[key]}} </td> 
                            {% endfor %}
                            
                            <td><a href="edit_rph/{{item.rph_id}}" class="btn btn-default">Edit</a></td>
                            <td><a href="delete_rph/{{item.rph_id}}" class="btn btn-default">Delete</a></td>
                        </tr> 
                        {% endfor %} 
                {% endif %} 
        </table>   
      </div>
      <div id="footer">
        <hr>
    </div>
    
</html>